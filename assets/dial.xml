<?xml version="1.0" encoding="UTF-8"?>
<Response>
    <Gather action="" method="POST" numDigits="1" timeout="5">
        <Say>Please select an option:</Say>
        <Say>Press 1 for Sales.</Say>
        <Say>Press 2 for Support.</Say>
        <Say>Press any other key to leave a voicemail.</Say>
    </Gather>
    <!-- If there's no user input, repeat the menu -->
    <Redirect method="POST"></Redirect>

    <!-- Handle the user's selection -->
    <Dial>
        <Number method="POST" selected="1">+442045793664</Number>
        <Number method="POST" selected="2">+447453947716</Number>
    </Dial>
    <Say>Please leave a voicemail after the beep. Press the pound key when you are done.</Say>
    <Record action="/handle_recording" method="POST" maxLength="120" finishOnKey="#" />
</Response>
